#!/usr/bin/env bash

# Move to a temporary directory and remember previous directory.
# popd(1) can be used to go back to previous directory.
function ctemp() {
    case "$1" in
        -f|--file)
            if [ "$EDITOR" == "" ]
            then
                echo "EDITOR not set"
            else
                $EDITOR "$(mktemp)"
            fi
            ;;
        -h|--help)
            echo -e "Usage:\n\t$(basename "$0") [-f,--file] [-h,--help]"
            ;;
        *)
            pushd "$(mktemp -d)" >/dev/null || exit 1
            ;;
    esac
}

